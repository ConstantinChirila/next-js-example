{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "@tooploox-test/components": ["components/index.ts"],
      "@tooploox-test/helpers": ["helpers/index.ts"],
      "@tooploox-test/services": ["services/index.ts"],
      "@tooploox-test/test-helpers": ["test-helpers/index.ts"],
      "@tooploox-test/theme": ["theme/index.ts"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es5"
  },
  "exclude": ["node_modules", ".next", "out"],
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "next-env.d.ts", "styled.d.ts"]
}
